    {
      "name": "RBAC Testing",
      "item": [
        {
          "name": "Admin Access - Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "users"
              ]
            },
            "description": "Only admin should access this"
          }
        },
        {
          "name": "Manager Access - Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/manager/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "manager",
                "orders"
              ]
            },
            "description": "Admin and Manager should access this"
          }
        },
        {
          "name": "Driver Access - Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driverToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/driver/orders",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "driver",
                "orders"
              ]
            },
            "description": "All roles should access this"
          }
        },
        {
          "name": "Unauthorized Access Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "users"
              ]
            },
            "description": "Should return 401 Unauthorized"
          }
        },
        {
          "name": "Driver Try Admin Access",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{driverToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "admin",
                "users"
              ]
            },
            "description": "Should return 403 Forbidden"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ]
