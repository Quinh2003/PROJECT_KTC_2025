          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@ktclogistics.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Quản Trị Viên\",\n  \"phoneNumber\": \"0901234567\",\n  \"roles\": [\"admin\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "signup"
              ]
            },
            "description": "Đăng ký tài khoản mới với role admin"
          }
        },
